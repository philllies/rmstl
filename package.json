{
    "name": "rmstl",
    "version": "0.0.1",
    "description": "rmstl is a boilerplate for TypeScript-based React projects using, MobX, MobX-State-Tree, lodash. It includes mocha/chai for unit testing, and uses Webpack for bundling and running a dev server.",
    "main": "App.tsx",
    "scripts": {
        "start": "webpack-dev-server --hot --mode development --color --progress --inline --host 0.0.0.0",
        "build": "webpack --env production",
        "test": "ts-mocha -p ./tsconfig.test.json -r tsconfig-paths/register \"test/*\""
    },
    "author": "Philipp Eichmann",
    "license": "MIT",
    "dependencies": {
        "lodash": "^4.17.15",
        "mobx": "^5.15.4",
        "mobx-react": "^6.2.2",
        "mobx-state-tree": "^3.16.0",
        "mobx-utils": "^5.5.7",
        "mst-middlewares": "^3.16.0",
        "node-sass": "^4.14.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "serializr": "^2.0.3",
        "socket.io-client": "^2.3.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/lodash": "^4.14.152",
        "@types/mocha": "^7.0.2",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/socket.io-client": "^1.4.33",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "copy-webpack-plugin": "^6.0.1",
        "css-loader": "^3.5.3",
        "file-loader": "^6.0.0",
        "mocha": "^7.2.0",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "ts-loader": "^7.0.4",
        "ts-mocha": "^7.0.0",
        "typescript": "^3.9.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0",
        "webpack-hot-middleware": "^2.25.0"
    }
}